<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main Theme -->
    <style name="Theme.Ucbp1" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Center icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

        <!-- Icon background (transparent for no circle) -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Animation duration -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Post splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.Ucbp1</item>
    </style>
</resources>